<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>{{ title }}</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			<!-- mod2: header handlebars implementation -->
			{{> header }}
			<div id="contents">
				<div class="box">
					<div>
						<div class="body">
							<h1>Travel</h1>
							<ul id="sites">
								<!-- mod3: replace baked-in elements with a for loop for scalability -->
								{{#each trips}}
									<li>
										<a href="/api/trips/{{this.code}}"><img src="images/{{this.image}}" alt="Img"></a> 
										<h2><a href="/travel">{{this.name}}</a></h2>
										{{{this.description}}}
									</li>
								{{/each}}
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- mod2: footer handlebars implementation -->
		{{> footer }}
	</div>
</body>
</html>